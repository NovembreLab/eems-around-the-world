rule make_within_file:
    input:
        indiv_meta='{name}.indiv_meta'
    output:
        within='{name}.within'
    run:
        import pandas as pd
        indiv_meta = pd.read_csv(input.indiv_meta)
        within = indiv_meta[['sampleId', 'sampleId', 'popId']]
        within.to_csv(output.within, sep=" ", header=False, index=False)

rule plink_fst:
    input:
        bed='{name}.bed',
        bim='{name}.bim',
        fam='{name}.fam',
        within='{name}.within'
    output:
        fst='{name}.fst',
        fstall='{name}.fstall'
    run:
        name = wildcards.name
        s = [PLINK_EXE, '--bfile',  name, '--fst --out', name,  
            '--within', input.within]
        sgrep = " |grep Mean | cut -f4 -d' ' > {output.fstall}"
        shell(" ".join(s) + sgrep)

rule makefrqstrat:
    input:
        bed='{name}.bed',
        bim='{name}.bim',
        fam='{name}.fam',
        within='{name}.within'
    output:
        frqstrat="{name}.frq.strat.gz"
    run:
        name = wildcards.name
        s = [PLINK_EXE, '--bfile',  name, '--freq gz --out', name,  
            '--within', input.within]
        shell(" ".join(s))

